<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BolTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Orange_10</item>
        <item name="colorPrimaryDark">@color/Orange_9</item>
        <item name="colorAccent">@color/Gray_13</item>

        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentBottomSheetDialogFragment" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
