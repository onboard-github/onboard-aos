<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.setting.QuitFragment">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="18dp"
            android:layout_marginTop="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴하기 전에 확인해주세요"
            android:layout_marginTop="14dp"
            android:textAppearance="@style/Typography.Title1"
            app:layout_constraintStart_toStartOf="@id/btn_back"
            app:layout_constraintTop_toBottomOf="@id/btn_back"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_quit_1"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="7dp"
                android:background="@drawable/bg_oval_orange10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_quit_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Typography.Body3_R"
                android:text="@string/quit_text_1"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_quit_1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/iv_quit_2"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="7dp"
                android:background="@drawable/bg_oval_orange10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_quit_2"/>

            <TextView
                android:id="@+id/tv_quit_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Typography.Body3_R"
                android:text="@string/quit_text_2"
                android:layout_marginTop="24dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_quit_1"
                app:layout_constraintStart_toEndOf="@id/iv_quit_2"
                app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.yapp.bol.designsystem.ui.button.BolRoundedButton
            android:id="@+id/btn_quit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:bolButtonText="확인"
            app:bolButtonType="roundedSquareType"
            app:bolButtonColor="orange"
            android:layout_marginBottom="26dp"
            android:layout_marginHorizontal="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
