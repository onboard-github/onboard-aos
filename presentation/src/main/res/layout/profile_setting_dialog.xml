<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_12dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        android:text="@string/profile_setting"
        android:textAppearance="@style/Typography.Title2"
        android:textColor="@color/Gray_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/profile_setting_guide"
        android:textAppearance="@style/Typography.Body4_R"
        android:textColor="@color/Gray_9"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <EditText
        android:id="@+id/et_profile_name"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_white_radius_8dp"
        android:hint="@string/group_owner_test"
        android:maxLength="10"
        android:paddingHorizontal="40dp"
        android:singleLine="true"
        android:textAppearance="@style/Typography.Body2_M"
        android:textColorHint="@color/Gray_9"
        android:textCursorDrawable="@drawable/ic_cursor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

    <ImageView
        android:id="@+id/iv_owner_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_manager"
        app:layout_constraintBottom_toBottomOf="@+id/et_profile_name"
        app:layout_constraintStart_toStartOf="@+id/et_profile_name"
        app:layout_constraintTop_toTopOf="@+id/et_profile_name" />

    <TextView
        android:id="@+id/tv_nickname_setting_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/nickname_setting_guide"
        android:textAppearance="@style/Typography.Body5_R"
        android:textColor="@color/Gray_8"
        app:layout_constraintStart_toStartOf="@+id/et_profile_name"
        app:layout_constraintTop_toBottomOf="@+id/et_profile_name" />

    <TextView
        android:id="@+id/tv_profile_name_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/profile_name_count"
        android:textAppearance="@style/Typography.Body5_R"
        android:textColor="@color/Gray_8"
        app:layout_constraintEnd_toEndOf="@+id/et_profile_name"
        app:layout_constraintTop_toBottomOf="@+id/et_profile_name" />

    <Button
        android:id="@+id/btn_profile_complete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_gary_to_orange_bottom_radius_12dp"
        android:text="@string/create_group_text"
        android:textAppearance="@style/Typography.Label3_M"
        android:textColor="@drawable/tc_white_to_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_profile_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
